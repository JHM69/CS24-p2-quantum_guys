<?xml version="1.0" encoding="utf-8"?><androidx.constraintlayout.motion.widget.MotionLayout xmlns:android="http://schemas.android.com/apk/res/android"    xmlns:app="http://schemas.android.com/apk/res-auto"    xmlns:tools="http://schemas.android.com/tools"    android:layout_width="match_parent"    android:layout_height="match_parent"    app:layoutDescription="@xml/activity_result_scene">    <androidx.appcompat.widget.Toolbar        android:id="@+id/toolbar2"        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:background="?colorPrimary"        app:subtitleTextColor="@color/white"        android:minHeight="?attr/actionBarSize"        app:layout_constraintEnd_toEndOf="parent"        app:layout_constraintStart_toStartOf="parent"        app:layout_constraintTop_toTopOf="parent"        app:popupTheme="@style/AppTheme"        app:theme="@style/ToolbarTheme"        app:title="Bills"        app:titleTextColor="@color/white" />    <com.google.android.material.button.MaterialButton        android:id="@+id/playAgain"        android:layout_width="0dp"        android:layout_height="60dp"        android:layout_marginStart="16dp"        android:layout_marginEnd="16dp"        android:layout_marginBottom="8dp"        android:backgroundTint="?colorPrimary"        android:text="Go to Home"        android:textColor="@color/white"        android:textSize="16sp"        app:cornerRadius="10dp"        app:iconGravity="textStart"        app:iconTint="@color/white"        app:layout_constraintBottom_toBottomOf="parent"        app:layout_constraintEnd_toEndOf="parent"        app:layout_constraintStart_toStartOf="parent"        tools:ignore="HardcodedText,RtlHardcoded" /></androidx.constraintlayout.motion.widget.MotionLayout>